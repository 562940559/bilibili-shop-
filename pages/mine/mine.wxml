<!-- userInfo部分 -->
<view class="userInfo">
  <!-- 通过插件获取微信用户名及头像 -->
  <view class="userAvatar">
    <open-data type="userAvatarUrl"></open-data>
  </view>
  <view class="userName-wrap">
    <text>欢迎你: </text>
    <open-data 
      type="userNickName" 
      lang="zh_CN" 
      class="userName"
    ></open-data>
  </view>
</view>

